<%- include("header") -%> 
    <div class="box" id="heading">
        <h1><%= listTitle %></h1>
    </div>
    
    <div class="box">
        <% for(let i = 0; i < addedItems.length; i++) {  %>
            <div class="item">
                <input type="checkbox">
                <p><%= addedItems[i] %></p>
            </div>
        <% } %>

        <form action="/" method="POST">
            <input type="text" name="newItem" placeholder="New Item" autofocus>
            <button type="submit" name="list" value="<%= listTitle %>">+</button>
        </form>
    </div>
<%- include("footer") -%> 